{
  "version": 2,
  "buildCommand": "bash ../build.sh",
  "builds": [
    {
      "src": "HRM_SOFT/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "HRM_SOFT/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "HRM_SOFT.settings",
    "PYTHONUNBUFFERED": "1"
  }
}